<?xml version="1.0"?>
<template
    format="1"
    revision="1"
    name="Clean Architecture"
    description="Creates Clean Architecture setup"
    >

   <category value="AACustom" />

    <parameter
        id="modelName"
        name="Class name"
        type="string"
        constraints="class|unique|nonempty"
        default="X"
        help = "The name of the domain model"
         />

       <parameter
        id="useCaseName"
        name="Class name"
        type="string"
        constraints="class|unique|nonempty"
        default="XUseCase"
        help = "The name of the domain use case"
         />


  <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default = "com.vuki.android"
        />
        

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />


</template>
